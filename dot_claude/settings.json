{
  "disableAllHooks": true,
  "cleanupPeriodDays": 7,
  "permissions": {
    "allow": [
			"Read(*)",
			"WebSearch(*)",
			"WebFetch(https://api.github.com:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint*)",
      "Bash(go test:*)"
    ],
		"ask": [
			"Bash(git push:*)",
			"Bash(git commit:*)"
		],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(curl:*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "env": {
    "MAX_THINKING_TOKENS": "32000"
  },
  "sandbox": {
    "enabled": true,
    "allowUnsandboxedCommands": false,
    "excludedCommands": ["git"]
  }
}
