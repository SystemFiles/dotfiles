# general system aliases
alias h='history -i'
alias hg='history -i | grep -i '
alias f='find . | grep -i '
alias mkdir='mkdir -pv'

# setup vim alias -> neovim if available
if [[ $(command -v nvim) ]]; then
  alias vi="nvim"
  alias vim='nvim'
  alias view="nvim -R"
  alias vimdiff="nvim -d"
fi

# setup exa alias to 'ls' if exa is installed
if [[ $(command -v exa) ]]; then
  alias ls='exa --group-directories-first --long --git --header --group'
  alias lst='exa --group-directories-first --long --git --header --group --tree --level=4'
else
  alias ls='ls -CHG -color'
fi

# devcontainers (CLI) shortcuts
if [[ $(command -v devcontainers) ]]; then
	alias dc='devcontainer'
	alias dcup='devcontainer up --workspace-folder .'
	alias dcconfig='devcontainer read-configuration --workspace-folder .'
	alias dcexec='devcontainer exec --workspace-folder .'
	alias dcshell='devcontainer exec --workspace-folder . bash'
fi

